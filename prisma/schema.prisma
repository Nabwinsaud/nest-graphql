// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  posts Post[]
}

model Post {
  id     String  @id @default(uuid())
  title  String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@index([userId, title])
}
